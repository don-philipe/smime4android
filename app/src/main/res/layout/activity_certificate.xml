<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tud.inf.smime4android.activities.CertificateActivity">

    <TextView android:text="@string/certificates_overview" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/certificates_overview" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/certificates_listView"
        android:layout_below="@+id/certificates_overview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

  <!--  <TextView android:text="@string/certificates_install" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/certificates_install" /> -->

</RelativeLayout>
